<UserControl x:Class="COMessengerClient.CustomControls.MessageBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:props="clr-namespace:COMessengerClient.Properties"
             xmlns:system      ="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignWidth="500"
             d:DesignHeight="100">
    <Grid>
        <StackPanel Name="HeaderAndBackground">
            <!--Отступ для заголовка-->
            <Border Opacity="0"
                Height="{Binding HeaderHeight}" >

            </Border>
            <Grid>
            <!--Фон для сообщения-->
            <Border CornerRadius="5"                 
                        Margin="{Binding Padding}"
                        Height="{Binding Height}" 
                        BorderThickness="1"
                        d:DesignHeight="145">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{Binding BackgroundColor1}" Offset="0"/>
                        <GradientStop Color="{Binding BackgroundColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!--Рамка-индикатор режима редактирования-->
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsEditing}" Value="True">
                                    <Setter Property="BorderBrush" Value="Orange" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                </Border>
            <!--Аватарка-->
            <Border Name="Avatar"
                    CornerRadius="0, 5, 5, 5"
                 BorderBrush="Gray" 
                 Margin="10,-3,3,0"
                 BorderThickness="0.5" 
                 MaxHeight="25" 
                 Height="{Binding Path=Height, FallbackValue=25}" 
                 Width="{Binding RelativeSource={RelativeSource Mode=Self},Path=ActualHeight}" 
                 Opacity="0.8"
                 VerticalAlignment="Top"
                 UseLayoutRounding="False"
                 SnapsToDevicePixels="False">
                    <Border.Background>
                    <ImageBrush />
                </Border.Background>
            </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
